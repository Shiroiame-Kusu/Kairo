<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Kairo.ViewModels"
             x:Class="Kairo.Components.DashBoard.HomePage"
             x:DataType="vm:HomePageViewModel">
    <Grid RowDefinitions="Auto,*,70" Margin="12">
        <!-- Header -->
        <Border Grid.Row="0" CornerRadius="8" Padding="12,0" Background="{DynamicResource LayerFillColorDefaultBrush}"
                HorizontalAlignment="Left">
            <TextBlock VerticalAlignment="Center" FontSize="24" Text="{Binding WelcomeText}" Margin="0,12,0,12" />
        </Border>

        <!-- Announcement / Content -->
        <Border Grid.Row="1" CornerRadius="8" Padding="12" Background="{DynamicResource LayerFillColorDefaultBrush}"
                Margin="0,12,0,0">
            <ScrollViewer>
                <TextBlock Text="{Binding Announcement}" TextWrapping="Wrap" />
            </ScrollViewer>
        </Border>
        <!-- Footer stats -->
        <Grid Grid.Row="2" ColumnDefinitions="Auto,Auto,Auto,*" Margin="0,12,0,0">
            <Border Grid.Column="0" VerticalAlignment="Center" Margin="0,0,16,0" Padding="12" CornerRadius="8"
                    Background="{DynamicResource LayerFillColorDefaultBrush}">
                <TextBlock Text="{Binding BandwidthText}" />
            </Border>
            <Border Grid.Column="1" VerticalAlignment="Center" Margin="0,0,16,0" Padding="12" CornerRadius="8"
                    Background="{DynamicResource LayerFillColorDefaultBrush}">
                <TextBlock Text="{Binding TrafficText}" />
            </Border>
            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                <Button Content="签到" Command="{Binding SignCommand}" IsVisible="{Binding SignButtonVisible}" />
                <Border IsVisible="{Binding SignedBorderVisible}" CornerRadius="6" Padding="8" Background="#33999999">
                    <TextBlock Text="你今天已经签到过啦！" />
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>