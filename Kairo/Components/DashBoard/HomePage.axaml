<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Kairo.Components.HomePage">
  <Grid RowDefinitions="60,*,70" Margin="12">
    <!-- Header -->
    <DockPanel Height="60">
      <Border Height="40" Width="40" CornerRadius="20" BorderBrush="LightBlue" BorderThickness="1" Margin="0,10,10,10">
        <Image x:Name="AvatarImage" Source="avares://Kairo/Assets/kairo.ico" Stretch="UniformToFill"/>
      </Border>
      <TextBlock x:Name="WelcomeText" VerticalAlignment="Center" FontSize="24" Text="欢迎回来，"/>
    </DockPanel>
    <!-- Announcement / Content -->
    <Border Grid.Row="1" CornerRadius="8" Padding="12" Background="{DynamicResource SystemControlBackgroundBaseLowBrush}">
      <ScrollViewer>
        <TextBlock x:Name="Announcement" Text="加载公告中..." TextWrapping="Wrap"/>
      </ScrollViewer>
    </Border>
    <!-- Footer stats -->
    <Grid Grid.Row="2" ColumnDefinitions="Auto,Auto,Auto,*" Margin="0,12,0,0">
      <Border Margin="0,0,16,0" Padding="12" CornerRadius="8" Background="{DynamicResource SystemControlBackgroundBaseLowBrush}">
        <TextBlock x:Name="BandwidthText" Text="上行/下行带宽: -/-"/>
      </Border>
      <Border Margin="0,0,16,0" Padding="12" CornerRadius="8" Background="{DynamicResource SystemControlBackgroundBaseLowBrush}">
        <TextBlock x:Name="TrafficText" Text="剩余流量: -"/>
      </Border>
      <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
        <Button x:Name="SignButton" Content="签到" Click="SignButton_OnClick"/>
        <Border x:Name="SignedBorder" IsVisible="False" CornerRadius="6" Padding="8" Background="#33999999">
          <TextBlock Text="你今天已经签到过啦！"/>
        </Border>
      </StackPanel>
    </Grid>
  </Grid>
</UserControl>
