<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Kairo.ViewModels"
             x:Class="Kairo.Components.DashBoard.ProxyCard"
             x:DataType="vm:ProxyCardViewModel">
  <Border x:Name="RootBorder" Classes="proxy-card" DoubleTapped="OnCardDoubleTapped" PointerPressed="OnCardPointerPressed">
    <FlyoutBase.AttachedFlyout>
      <MenuFlyout>
        <MenuItem Header="刷新" Command="{Binding RefreshCommand}" />
        <Separator/>
        <MenuItem Header="新建隧道" Command="{Binding CreateCommand}" />
        <MenuItem Header="删除隧道" Command="{Binding DeleteCommand}" />
        <Separator/>
        <MenuItem Header="启动隧道" Command="{Binding StartCommand}" />
        <MenuItem Header="停止隧道" Command="{Binding StopCommand}" />
      </MenuFlyout>
    </FlyoutBase.AttachedFlyout>
    <!-- Remove zero padding; style now provides Padding=10 -->
    <StackPanel x:Name="MainPanel" Spacing="6" Margin="0">
      <StackPanel Orientation="Horizontal" Spacing="4">
        <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
        <Ellipse x:Name="Indicator" Width="10" Height="10" StrokeThickness="2" Margin="4,0,0,0">
        </Ellipse>
      </StackPanel>
      <TextBlock Text="{Binding RouteText}" FontSize="12" TextWrapping="Wrap"/>
    </StackPanel>
  </Border>
</UserControl>
